{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block stylesheets %}
    <style>
        body {
            padding: 30px 50px;
            font-family: Montserrat, serif;
            font-weight: normal;
            margin: auto;
        }

        image {
            max-width: 100%;
            height: auto;
        }

        .alert {
            transition: 0.7s ease-in;
        }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
            {#            {{ app.session.flash(label) }} #}
        {% endfor %}
    {% endfor %}

    <div>
        <div class="card-title">
            <h1>Hello {{ controller_name }}</h1>
        </div>

        <section class="card-body row row-cols-md-4 row-cols-3 g-0">
            {% for p in personnes %}
                <div class="card m-2">
                    <img src="{{ p.path|DefaultImage }}" class=" card-img-top" alt="profile">

                    <div class="card-body">
                        <h5 class="card-title">{{ p.nom|title }} {{ p.prenom|title }}</h5>
                    </div>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Age : {{ p.age }}</li>
                        <li class="list-group-item">CIN : {{ p.cin }}</li>
                    </ul>
                </div>
            {% endfor %}
        </section>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
{% endblock %}
